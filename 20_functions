# -*- Mode: Shell-script; -*-
# .zsh/20_functions : Mark Tran <mark@nirv.net>
# complete notation for repeated dots
rationalise-dot() {
    if [[ $LBUFFER = *.. ]]; then
        LBUFFER+=/..
    else
        LBUFFER+=.
    fi
}
zle -N rationalise-dot

# force zsh to rehash
_force_rehash() {
  (( CURRENT == 1 )) && rehash
  return 1
}

zstyle ':completion:*' completer \
  _oldlist _expand _force_rehash _complete ...
