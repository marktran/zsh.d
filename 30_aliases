# -*- Mode: Shell-script; -*-

# .zsh/30_aliases : Mark Tran <mark@nirv.net>

alias ^L=clear
alias ack='ack-grep --nocolor'
alias e='emacsclient -c'
alias irc='ssh -t monaco screen -D -R irssi'
alias ls='ls -F'
alias m=mplayer
alias maketorrent='/usr/share/python-support/bittorrent/BitTorrent/btmakemetafile.py'
alias rm='rm -i'
alias sourcerc='. ~/.zsh/.zshrc'

alias -g A='| ack'
alias -g L='| less'
alias -g X='| xargs -i'
alias -g XR='| xargs -i unrar x {}'

alias bbc='mplayer -cache-min 4 -playlist http://www.bbc.co.uk/worldservice/meta/tx/nb/live_news_au_nb.ram'
alias mpr='mplayer -cache-min 4 http://newsstream1.publicradio.org:80/'
alias npr='mplayer -cache-min 4 http://scfire-chi-aa01.stream.aol.com:80/stream/1062'
